  /*伸缩盒子*/
  display: flex;
  padding: 10rpx 0;
}
.title_item{
  flex: 1;
  display: flex;
  /*文字水平对齐*/
  justify-content: center;
  /*文字垂直对齐*/
  align-items: center;
}
